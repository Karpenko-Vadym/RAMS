<!-- AGENT INDEX VIEW -->
<button type="button" class="btn btn-info pull-right" onclick="LoadAction('agent-list-div', '@Url.Action("AgentList", "Agent", new { Area = "Agency" })' );">Refresh List</button>

<div class="clearfix"></div>

<div class="vertical-padding-24"></div>

<div id="agent-list-div"></div>

<!-- AGENT DETAILS MODAL -->
<div id="agent-details-modal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- MODAL CONTENT -->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="$('#agent-details-modal').modal('hide');">&times;</button>
                <h4 id="agent-details-modal-title" class="modal-title text-center">Agent Details</h4>
            </div>
            <div class="modal-body">
                <div class="well well-lg bottom-margin-0">
                    <div id="agent-details-modal-body-div"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="$('#agent-details-modal').modal('hide');">Close</button>
            </div>
        </div>
        <!-- END OF MODAL CONTENT-->
    </div>
</div>
<!-- END OF AGENT DETAILS MODAL -->

<script type="text/javascript">$(function () { LoadAction("agent-list-div", "@Url.Action("AgentList", "Agent", new { Area = "Agency" })"); AgencyModalControls(); });</script>
<!-- END OF AGENT INDEX VIEW -->