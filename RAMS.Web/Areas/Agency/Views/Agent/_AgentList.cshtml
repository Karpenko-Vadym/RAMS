@model List<RAMS.ViewModels.AgentListViewModel>
<!-- AGENT LIST PARTIAL -->
@if (!RAMS.Helpers.Utilities.IsEmpty(Model))
{
    <div class="well well-lg bottom-margin-0 background-white">
        <table id="agent-list-table" class="table table-striped table-bordered table-hover bottom-margin-0" cellspacing="0">
            <thead>
                <tr class="active">
                    <th>Id</th>
                    <th>Full Name</th>
                    <th>Status</th>
                    <th>Department</th>
                    <th>Positions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="cursor-pointer" data-toggle="modal" data-backdrop="static" data-target="#agent-details-modal" data-agent-id="@item.AgentId" data-agent-name="@item.FullName">
                        <td>@item.AgentIdForDisplay</td>
                        <td>@item.FullName</td>
                        <td>@((item.AgentStatus == RAMS.Enums.AgentStatus.FullTime) ? "Full Time" : (item.AgentStatus == RAMS.Enums.AgentStatus.PartTime) ? "Part Time" : item.AgentStatus.ToString())</td>
                        <td>@item.Department</td>
                        <td>@item.Positions</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script type="text/javascript">$(function () { LoadDataTable("agent-list-table") });</script>
}
else
{
    <div class="well well-lg bottom-margin-0 background-white">
        <div class="alert alert-danger bottom-margin-0" role="alert">
            <span>Agent data is not available.</span>
        </div>
    </div>
}
<!-- END OF AGENT LIST PARTIAL -->

