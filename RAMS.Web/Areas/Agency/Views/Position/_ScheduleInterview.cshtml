                                        }
                                        else
                                        {
                                            <td class="success">14:00</td>
                                            <td class="success">Available<span class="pull-right margin-left-10"><input type="radio" name="SelectedDateTime" value="@Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(14)"></span></td>
                                        }
                                    </tr>
                                    <tr class="cursor-pointer">
                                        @if (Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(15)) != null)
                                        {
                                            <td class="danger">15:00</td>
                                            <td class="danger">@Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(15)).Candidate.FullName</td>
                                        }
                                        else
                                        {
                                            <td class="success">15:00</td>
                                            <td class="success">Available<span class="pull-right margin-left-10"><input type="radio" name="SelectedDateTime" value="@Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(15)"></span></td>
                                        }
                                    </tr>
                                    <tr class="cursor-pointer">
                                        @if (Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(16)) != null)
                                        {
                                            <td class="danger">16:00</td>
                                            <td class="danger">@Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(16)).Candidate.FullName</td>
                                        }
                                        else
                                        {
                                            <td class="success">16:00</td>
                                            <td class="success">Available<span class="pull-right margin-left-10"><input type="radio" name="SelectedDateTime" value="@Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(16)"></span></td>
                                        }
                                    </tr>
                                    <tr class="cursor-pointer">
                                        @if (Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(17)) != null)
                                        {
                                            <td class="danger">17:00</td>
                                            <td class="danger">@Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(17)).Candidate.FullName</td>
                                        }
                                        else
                                        {
                                            <td class="success">17:00</td>
                                            <td class="success">Available<span class="pull-right margin-left-10"><input type="radio" name="SelectedDateTime" value="@Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(17)"></span></td>
                                        }
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="vertical-padding-24"></div>

        <div class="form-group bottom-margin-0">
            <div class="col-md-offset-0 col-lg-offset-0 col-md-3 col-lg-3">
                <input type="submit" value="Schedule" class="btn btn-danger btn-block" onclick="$('#schedule-interview-modal').modal('hide');" />
            </div>

            <div class="col-md-offset-6 col-lg-offset-6 col-md-3 col-lg-3">
                <input type="button" value="Cancel" class="btn btn-info btn-block" onclick="$('#schedule-interview-modal').modal('hide');" />
            </div>
        </div>

        <div class="clearfix"></div>
    }
}
else
{
<div class="well well-lg bottom-margin-0">
    <div class="well well-lg bottom-margin-0 background-white">
        <div class="alert alert-danger bottom-margin-0" role="alert">
            <span>Oh no!<br />There is no data available.</span>
        </div>
    </div>
</div>
