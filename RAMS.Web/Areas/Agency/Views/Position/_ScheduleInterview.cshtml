@model RAMS.ViewModels.InterviewScheduleViewModel

<!-- SCHEDULE INTERVIEW PARTIAL -->
@{
    AjaxOptions ajaxOptions = new AjaxOptions
    {
        UpdateTargetId = "edit-position-message-modal-body-div",
        OnBegin = "OnAjaxBegin",
        OnSuccess = "OnAjaxSuccess",
        OnFailure = "OnAjaxFailure",
        OnComplete = "OnAjaxComplete"
    };
}

@if (Model.CandidateId > 0)
{
    using (Ajax.BeginForm("ScheduleInterview", "Position", new { Area = "Agency" }, ajaxOptions, new { id = "schedule-interview-form" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.CandidateId)
    
        <div class="well well-lg bottom-margin-0">
            <div class="btn-group btn-group-justified" role="group">

                <div class="btn-group" role="group">
                    <input type="button" class="btn btn-info" onclick="LoadAction('schedule-interview-modal-body-div', '@Url.Action("ScheduleInterview", "Position", new { candidateId = Model.CandidateId, displayDate = Convert.ToDateTime(Model.DisplayDate).AddDays(-7).ToString("dd/MM/yyyy hh:mm:ss tt"), Area = "Agency" })');" value="Previous Week" />
                </div>

                <div class="btn-group" role="group">
                    @if (Convert.ToDateTime(Model.DisplayDate).ToString("dd/MM/yyyy") == DateTime.Now.ToString("dd/MM/yyyy"))
                    {
                        <input type="button" class="btn btn-danger" disabled value="Current Week" />
                    }
                    else
                    {
                        <input type="button" class="btn btn-danger" onclick="LoadAction('schedule-interview-modal-body-div', '@Url.Action("ScheduleInterview", "Position", new { candidateId = Model.CandidateId, displayDate = DateTime.Now.ToString("dd/MM/yyyy hh:mm:ss tt"), Area = "Agency" })');" value="Current Week" />
                    }
                </div>

                <div class="btn-group" role="group">
                    <input type="button" class="btn btn-info" onclick="LoadAction('schedule-interview-modal-body-div', '@Url.Action("ScheduleInterview", "Position", new { candidateId = Model.CandidateId, displayDate = Convert.ToDateTime(Model.DisplayDate).AddDays(7).ToString("dd/MM/yyyy hh:mm:ss tt"), Area = "Agency" })');" value="Next Week" />
                </div>
            </div>
            <div class="vertical-padding-24"></div>

            <div class="well well-lg bottom-margin-0 background-white">
                <div class="row">
                    @for (int increment = (((((int)Convert.ToDateTime(Model.DisplayDate).DayOfWeek == 0) ? 7 : (int)Convert.ToDateTime(Model.DisplayDate).DayOfWeek) - 1) * -1); increment <= (7 - (((int)Convert.ToDateTime(Model.DisplayDate).DayOfWeek == 0) ? 7 : (int)Convert.ToDateTime(Model.DisplayDate).DayOfWeek)); increment++)
                    {
                        <div class="col-md-4">
                            <h4 class='text-center @((Convert.ToDateTime(Model.DisplayDate).AddDays(increment).ToString("dd/MM/yyyy") == DateTime.Now.ToString("dd/MM/yyyy")) ? "text-warning" : "")'>@Convert.ToDateTime(Model.DisplayDate).AddDays(increment).DayOfWeek @Convert.ToDateTime(Model.DisplayDate).AddDays(increment).ToString("dd/MM/yyyy")</h4>
                            <table id="schedule-table" class="table table-hover table-bordered bottom-margin-0" cellspacing="0">
                                <thead>
                                    <tr class="active">
                                        <th>Time</th>
                                        <th>Availability</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="cursor-pointer">
                                        @if (Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(9)) != null)
                                        {
                                            <td class="danger">9:00</td>
                                            <td class="danger">@Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(9)).Candidate.FullName</td>
                                        }
                                        else
                                        {
                                            <td class="success">9:00</td>
                                            <td class="success">Available<span class="pull-right margin-left-10"><input type="radio" name="SelectedDateTime" value="@Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(9)"></span></td>
                                        }
                                    </tr>
                                    <tr class="cursor-pointer">
                                        @if (Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(10)) != null)
                                        {
                                            <td class="danger">10:00</td>
                                            <td class="danger">@Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(10)).Candidate.FullName</td>
                                        }
                                        else
                                        {
                                            <td class="success">10:00</td>
                                            <td class="success">Available<span class="pull-right margin-left-10"><input type="radio" name="SelectedDateTime" value="@Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(10)"></span></td>
                                        }
                                    </tr>
                                    <tr class="cursor-pointer">
                                        @if (Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(11)) != null)
                                        {
                                            <td class="danger">11:00</td>
                                            <td class="danger">@Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(11)).Candidate.FullName</td>
                                        }
                                        else
                                        {
                                            <td class="success">11:00</td>
                                            <td class="success">Available<span class="pull-right margin-left-10"><input type="radio" name="SelectedDateTime" value="@Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(11)"></span></td>
                                        }
                                    </tr>
                                    <tr class="cursor-pointer">
                                        @if (Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(12)) != null)
                                        {
                                            <td class="danger">12:00</td>
                                            <td class="danger">@Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(12)).Candidate.FullName</td>
                                        }
                                        else
                                        {
                                            <td class="success">12:00</td>
                                            <td class="success">Available<span class="pull-right margin-left-10"><input type="radio" name="SelectedDateTime" value="@Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(12)"></span></td>
                                        }
                                    </tr>
                                    <tr class="cursor-pointer">

                                        @if (Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(13)) != null)
                                        {
                                            <td class="danger">13:00</td>
                                            <td class="danger">@Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(13)).Candidate.FullName</td>
                                        }
                                        else
                                        {
                                            <td class="success">13:00</td>
                                            <td class="success">Available<span class="pull-right margin-left-10"><input type="radio" name="SelectedDateTime" value="@Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(13)"></span></td>
                                        }
                                    </tr>
                                    <tr class="cursor-pointer">
                                        @if (Model.Interviews.FirstOrDefault(i => i.InterviewDate == Convert.ToDateTime(Model.DisplayDate).AddDays(increment).AddHours(14)) != null)
                                        {
                                            <td class="danger">14:00</td>
