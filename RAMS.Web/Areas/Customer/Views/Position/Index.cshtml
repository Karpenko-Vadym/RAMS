<!-- POSITION INDEX VIEW -->
<button type="button" class="btn btn-info" data-toggle="modal" data-target="#new-position-modal">New Position</button>

<button type="button" class="btn btn-info pull-right" onclick="LoadAction('position-list-div', '@Url.Action("PositionList", "Position", new { Area = "Customer" })' );">Refresh List</button>

<div class="vertical-padding-24"></div>

<div id="position-list-div"></div>

<!-- NEW POSITION MODAL -->
<div id="new-position-modal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- MODAL CONTENT -->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="$('#new-position-modal').modal('hide');">&times;</button>
                <h4 class="modal-title text-center">New Position</h4>
            </div>
            <div class="modal-body">
                <div class="well well-lg bottom-margin-0">
                    <div id="new-position-modal-body-div"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="$('#new-position-modal').modal('hide');">Close</button>
            </div>
        </div>
        <!-- END OF MODAL CONTENT-->
    </div>
</div>
<!-- END OF NEW POSITION MODAL -->

<!-- POSITION DETAILS MODAL -->
<div id="position-details-modal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- MODAL CONTENT -->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="$('#position-details-modal').modal('hide');">&times;</button>
                <h4 id="position-details-modal-title" class="modal-title text-center">Position Details</h4>
            </div>
            <div class="modal-body">
                <div id="position-details-message-modal-body-div"></div>
                <div class="well well-lg bottom-margin-0">
                    <div id="position-details-modal-body-div"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="$('#position-details-modal').modal('hide');">Close</button>
            </div>
        </div>
        <!-- END OF MODAL CONTENT-->
    </div>
</div>
<!-- END OF POSITION DETAILS MODAL -->

<!-- POSITION CLOSURE CONFIRMATION MODAL -->
<div id="position-closure-confirmation-modal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- MODAL CONTENT -->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="$('#position-closure-confirmation-modal').modal('hide');">&times;</button>
                <h4 class="modal-title text-center">Position Closure Confirmation</h4>
            </div>
            <div class="modal-body">
                <div id="position-closure-confirmation-modal-body-div"></div>
            </div>
        </div>
        <!-- END OF MODAL CONTENT-->
    </div>
</div>
<!-- END OF POSITION CLOSURE CONFIRMATION MODAL -->

<script type="text/javascript">$(function () { LoadAction("position-list-div", "@Url.Action("PositionList", "Position", new { Area = "Customer" })"); CustomerModalControls(); });</script>
<!-- END OF POSITION INDEX VIEW -->