@model RAMS.ViewModels.PositionApprovalSuspendUnsuspentionViewModel
<!-- SUSPEND POSITION PARTIAL -->
@{
    AjaxOptions ajaxOptions = new AjaxOptions
    {
        UpdateTargetId = "position-details-message-modal-body-div",
        OnBegin = "OnAjaxBegin",
        OnSuccess = "OnAjaxSuccess",
        OnFailure = "OnAjaxFailure",
        OnComplete = "OnAjaxComplete"
    };

}

@using (Ajax.BeginForm("SuspendPosition", "Position", new { Area = "Customer" }, ajaxOptions, new { id = "suspend-position-form" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.PositionId)
    @Html.HiddenFor(model => model.Title)

    <div class="well well-lg bottom-margin-0">
        <div class="alert alert-warning bottom-margin-0" role="alert">
            <p>Are you sure that you want to <strong>SUSPEND</strong> position "@Model.Title"?</p>
            <p><strong>NOTE: </strong>This position will no longer be available on the job portal.</p>
        </div>
    </div>

    <div class="vertical-padding-24"></div>

    <div class="form-group bottom-margin-0">
        <div class="col-md-offset-0 col-lg-offset-0 col-md-3 col-lg-3">
            <input type="submit" value="Suspend" class="btn btn-danger btn-block" onclick="$('#suspend-position-modal').modal('hide');" />
        </div>

        <div class="col-md-offset-6 col-lg-offset-6 col-md-3 col-lg-3">
            <input type="button" value="Cancel" class="btn btn-info btn-block" onclick="$('#suspend-position-modal').modal('hide');" />
        </div>
    </div>

    <div class="clearfix"></div>
}
<!-- END OF SUSPEND POSITION PARTIAL -->
