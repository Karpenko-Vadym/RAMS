@model RAMS.ViewModels.UserConfirmationViewModel
<!-- SUCCESS PARTIAL -->
@if (Model != null)
{
    if (Model.RefreshEditForm)
    {
        <script type="text/javascript">$(function () { RefreshEditForm("@Model.UserName", "@Model.UserType"); });</script>
    }

    if (Model.RefreshList)
    {
        <script type="text/javascript">$(function () { LoadAction("user-list-div", "@Url.Action("UserList", "User", new { Area = "SystemAdmin" })"); });</script>
    }

    if (Model.ClearMessages)
    {
        <script type="text/javascript">$(function () { $("#edit-user-message-modal-body-div").empty(); });</script>
    }

    <div class="alert alert-success bottom-margin-0" role="alert">
        @Html.Raw(Model.Message)
    </div>  
}
<!-- END OF SUCCESS PARTIAL -->