@model List<RAMS.ViewModels.UserListViewModel>
<!-- USER LIST PARTIAL -->
@if(!RAMS.Helpers.Utilities.IsEmpty(Model))
{ 
    <div class="well well-lg bottom-margin-0 background-white">
        <table id="user-list-table" class="table table-striped table-bordered table-hover bottom-margin-0" cellspacing="0">
            <thead>
                <tr class="active">
                    <th>User Id</th>
                    <th>Username</th>
                    <th>Full Name</th>
                    <th>Role</th>
                    <th>Type</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    if (item.UserStatus != RAMS.Enums.UserStatus.Deleted)
                    {
                        <tr class="cursor-pointer" data-toggle="modal" data-backdrop="static" data-target="#edit-user-modal" data-user-name="@item.UserName" data-user-type="@item.UserType">
                            <td>@item.UserId</td>
                            <td>@item.UserName</td>
                            <td>@item.FullName</td>
                            <td>@item.Role</td>
                            <td>@item.UserType</td>
                            <td>@item.UserStatus</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <script type="text/javascript">$(function () { LoadDataTable("user-list-table") });</script>
}
else
{
    <div class="well well-lg bottom-margin-0 background-white">
        <div class="alert alert-danger bottom-margin-0" role="alert">
            <span>User data is not available.</span>
        </div>
    </div>
}
<!-- END OF USER LIST PARTIAL -->
